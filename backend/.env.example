# App
APP_NAME="CRM Protegrt API"
DEBUG=true
API_V1_PREFIX=/api/v1

# Database (via PgBouncer for app, direct for migrations)
DATABASE_URL=postgresql+asyncpg://protegrt:protegrt@localhost:6432/protegrt_db
DATABASE_URL_DIRECT=postgresql+asyncpg://protegrt:protegrt@localhost:5433/protegrt_db
DB_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT RS256 Keys
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS_WEB=7
REFRESH_TOKEN_EXPIRE_DAYS_MOBILE=30

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
LOGIN_RATE_LIMIT_USER=5
LOGIN_RATE_LIMIT_IP=10
LOGIN_RATE_LIMIT_WINDOW=900
LOGIN_LOCKOUT_ATTEMPTS=10
LOGIN_LOCKOUT_DURATION=1800

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# WhatsApp (Evolution API)
EVOLUTION_API_URL=
EVOLUTION_API_KEY=

# Telegram Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
